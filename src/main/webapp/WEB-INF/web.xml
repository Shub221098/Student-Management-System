<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <error-page>
  <exception-type>java.lang.Exception</exception-type>
  <location>/Error.jsp</location>
  </error-page>
  <servlet>
	  <servlet-name>Login</servlet-name>
	  <servlet-class>com.student.management.controller.LoginClass</servlet-class>
  </servlet>
  <servlet>
	  <servlet-name>AdminDashboard</servlet-name>
	  <servlet-class>com.student.management.controller.AdminDashboard</servlet-class>
  </servlet>
  <servlet>
	  <servlet-name>AddStudent</servlet-name>
	  <servlet-class>com.student.management.controller.AddStudent</servlet-class>
  </servlet>
  <servlet>
	  <servlet-name>InsertStudentDetails</servlet-name>
	  <servlet-class>com.student.management.controller.InsertStudentDetails</servlet-class>
  </servlet>
  <servlet>
	  <servlet-name>DeleteStudent</servlet-name>
	  <servlet-class>com.student.management.controller.DeleteStudent</servlet-class>
  </servlet>
   <servlet>
	  <servlet-name>UpdateStudentDetails</servlet-name>
	  <servlet-class>com.student.management.controller.UpdateStudentDetails</servlet-class>
  </servlet>
   <servlet>
	  <servlet-name>EditStudentDetails</servlet-name>
	  <servlet-class>com.student.management.controller.EditStudentDetails</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>Login</servlet-name>
	  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	  <servlet-name>AdminDashboard</servlet-name>
	  <url-pattern>/adminDashboard</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	  <servlet-name>AddStudent</servlet-name>
	  <url-pattern>/addStudent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	  <servlet-name>InsertStudentDetails</servlet-name>
	  <url-pattern>/insertStudentDetails</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
	  <servlet-name>DeleteStudent</servlet-name>
	  <url-pattern>/deleteStudent</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	  <servlet-name>EditStudentDetails</servlet-name>
	  <url-pattern>/editStudentDetails</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
	  <servlet-name>UpdateStudentDetails</servlet-name>
	  <url-pattern>/updateStudentDetails</url-pattern>
  </servlet-mapping>
</web-app>